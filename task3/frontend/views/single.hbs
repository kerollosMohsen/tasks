{{>header}}
{{>nav}}

{{#if found}}

<section class="row">
    <table class="table table-stripped">
      <thead>
        <tr>
          <th>title</th>
          <th>task content</th>
          <th>due date</th>
          <th>status</th>
          <th>actions</th>
        </tr>
      </thead>
      <tbody>
        {{#if task.Status}}
<tr class="alert alert-success">
          <td>{{task.title}}</td>
          <td>{{task.content}}</td>
          <td>{{task.duedate}}</td>
       <td><form action="taskCompleted">
        
            <button class="btn btn-warning mx-2" disabled>completed</button>
            
          </form></td>
    <td>
            <a href="/delete/{{task.title}}" class="btn btn-danger mx-2">Delete</a>


    </td>
        </tr>
        {{else}}
        <tr>
          <td>{{task.title}}</td>
          <td>{{task.content}}</td>
          <td>{{task.duedate}}</td>
       <td><form action="taskCompleted">
            <a href="/taskCompleted/{{task.title}}" class="btn btn-warning mx-2">complete</a>
          </form></td>
    <td>
            <a href="/delete/{{task.title}}" class="btn btn-danger mx-2">Delete</a>
    </td>
        </tr>
    {{/if}}
      </tbody>
    </table>
  </section>
{{else}}
  <div class="alert alert-danger">User Not Found</div>
{{/if}}

{{>footer}}